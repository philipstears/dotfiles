#!/usr/bin/env bash
declare DIR=$(cd "$(dirname "${BASH_SOURCE[0]}")"; pwd)

# NOTE: don't source utils or it'll end up
#       in the user's shell, which is unlikely
#       to be desired

main() {
  source_packages
}

source_packages() {
  for package_dir in ./packages/*; do
    local package_env="$package_dir/env"

    if [[ -e "$package_env" ]]; then
      source "$package_env"
    fi
  done
}

main
