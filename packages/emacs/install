#!/usr/bin/env bash
set -eu -o pipefail

declare PROG_NAME=$0
declare DIR=$(cd "$(dirname "${BASH_SOURCE[0]}")"; pwd)
source $DIR/../../include/utils

main() {
  sudo apt install -y emacs

  mkdir -p ~/.emacs.d/

  if [[ -e ~/.emacs.d/init.el ]] || [[ -L ~/.emacs.d/init.el ]]; then
    rm ~/.emacs.d/init.el
  fi

  ln -s $DIR/init.el ~/.emacs.d/init.el
}

main
