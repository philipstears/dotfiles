#!/usr/bin/env bash
set -eu -o pipefail

declare PROG_NAME=$0
declare DIR=$(cd "$(dirname "${BASH_SOURCE[0]}")"; pwd)
source $DIR/../../include/utils

main() {
  if command -v google-chrome; then
    return
  fi

  cd /tmp

  local -r package_name=google-chrome-stable_current_amd64.deb

  curl -Llsso "$package_name" "https://dl.google.com/linux/direct/$package_name"

  sudo apt install -y libxss1 libappindicator1 libindicator7

  sudo dpkg -i "$package_name"

  sudo apt install -f
}

main
